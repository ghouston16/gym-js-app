<div class="ui two column grid basic middle aligned segment">
    <div class="column">
    </div>
    <div class="column">
        <form class="ui stacked segment form" action="/settings" method="POST">
            <h3 class="ui header">Register</h3>
            <div class="two fields">
                <div class="field">
                    <label>Name</label>
                    <input placeholder="Name" type="text" name="dashboard.name" value="${dashboard.name}">
                </div>
                <div class="field">
                    <label>Gender</label>
                    <input placeholder="Gender" type="text" name="dashboard.gender" value="${dashboard.gender}">
                </div>
            </div>
            <div class="field">
                <label>Email</label>
                <input placeholder="Email" type="text" name="dashboard.email" value="${dashboard.email}">
            </div>
            <div class="field">
                <label>Password</label>
                <input type="password" name="dashboard.password" value="${dashboard.password}">
            </div>
            <div class="field">
                <label>Address</label>
                <input type="text" name="dashboard.address" value="${dashboard.address}">
            </div>
            <div class="two fields">
                <div class="field">
                    <label>Height</label>
                    <input placeholder="Name" type="text" name="dashboard.height" value="${dashboard.height}">
                </div>
                <div class="field">
                    <label>Starting Weight</label>
                    <input placeholder="Starting Weight" type="text" name="dashboard.startingweight" value="${dashboard.startingweight}">
                </div>
            </div>
            <button class="ui blue submit button">Submit</button>
        </form>
    </div>
</div>