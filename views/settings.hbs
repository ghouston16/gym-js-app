{{> membermenu}}

<div class="column">
    <form class="ui stacked segment form" action="/update/" method="POST">
        <h3 class="ui header">Settings</h3>
        <div class="two fields">
            <div class="field">
                <label>First Name</label>
                <input placeholder="{{loggedInUser.firstName}}" type="text" name="firstName" disabled="">
            </div>
            <div class="field">
                <label>Last Name</label>
                <input placeholder="{{loggedInUser.lastName}}" type="text" name="lastName" disabled="">
            </div>
            <div class="field">
                <label>Gender</label>
                <select placeholder= {{loggedInUser.gender}} name="gender" class="ui dropdown" disabled="">
                    <option value="">{{loggedInUser.gender}}</option>
                    <option value="M">Male</option>
                    <option value="F">Female</option>
                </select>
            </div>
        </div>
        <div class="field">
            <label>Email</label>
            <input placeholder="{{loggedInUser.email}}" type="email" name="email" disabled="">
        </div>
        <div class="field">
            <label>Password</label>
            <input type="password" name="password">
        </div>
        <div class="field">
            <label>Address</label>
            <input placeholder="{{loggedInUser.address}}" type="text" name="address">
        </div>
        <div class="two fields">
            <div class="field">
                <label>Height</label>
                <input placeholder="{{loggedInUser.height}}" type="number" step="0.01" min="1" max="3" name="height" disabled="">
            </div>
            <div class="field">
                <label>Starting Weight</label>
                <input placeholder="{{loggedInUser.startingWeight}}" type="number" step="0.01" min="0" max="250" name="startingweight" disabled="">
            </div>
        </div>
        <button class="ui blue submit button">Update</button>
    </form>
</div>

</di