<section class="ui raised segment stackable three column grid">
    <div class="column center aligned">
        <h2 class="ui icon header">
            <i class="thumbs up outline icon"></i>
            <div class="sub header"><b>Current: {{open}}</b></div>
        </h2>
    </div>
    <div class="column center aligned">
        <h2 class="ui icon header">
            <i class="thumbs up icon"></i>
            <div class="sub header"><b>Completed: {{achieved}}</b></div>
        </h2>
    </div>
    <div class="column center aligned">
        <h2 class="ui icon header">
            <i class="thumbs down icon"></i>
            <div class="sub header"><b>Missed: {{missed}}</b></div>
        </h2>
    </div>
</section>