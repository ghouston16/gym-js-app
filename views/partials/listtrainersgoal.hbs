<section class=" ui segment">
    <div class="ui huge purple label"><b>Member Goal Tracker</b></div>
    <table class="ui celled table">
        <thead>
        <tr>
            <th>Date</th>
            <th>Weight (kg)</th>
            <th>Chest (cm)</th>
            <th>Arm (cm)</th>
            <th>Thigh (cm)</th>
            <th>Waist (cm)</th>
            <th>Hips (cm)</th>
            <th>Status</th>
        </tr>
        </thead>
        <tbody>
        {{#each member.goals}}
            <tr>
                <td>
                    {{date}}
                </td>
                <td>
                    {{weight}}
                </td>
                <td>
                    {{chest}}
                </td>
                <td>
                    {{upperarm}}
                </td>
                <td>
                    {{thigh}}
                </td>
                <td>
                    {{waist}}
                </td>
                <td>
                    {{hips}}
                </td>
                <td>{{status}}</td>
            </tr>
        {{/each}}
        </tbody>
    </table>
</section>